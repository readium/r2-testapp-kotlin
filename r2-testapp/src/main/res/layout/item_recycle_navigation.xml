    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/indentation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        tools:ignore="Suspicious0dp" />

    <TextView
